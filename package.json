{
  "name": "math-toolbox",
  "description": "Lightweight and modular math toolbox",
  "main": "src/math-toolbox.js",
  "version": "0.0.0-semantically-released",
  "scripts": {
    "build": "NODE_ENV=build rollup -c",
    "build:uglify": "npm run build && uglifyjs dist/math-toolbox.js -cm --preamble \"// math-toolbox.js - https://github.com/terkelg/math-toolbox\" > dist/math-toolbox.min.js",
    "pretest": "standard",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:coverage": "jest --coverage",
    "docs": "documentation build src/math-toolbox.js -f html -o docs",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/terkelg/math-toolbox"
  },
  "bugs": {
    "url": "https://github.com/terkelg/math-toolbox/issues"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "math",
    "utils",
    "toolbox",
    "helper"
  ],
  "author": "Terkel Gjervig",
  "maintainers": [
    {
      "name": "Patrick Heng",
      "url": "https://github.com/patrickheng"
    },
    {
      "name": "Fabien Motte",
      "url": "https://github.com/FabienMotte"
    },
    {
      "name": "Terkel Gjervig",
      "email": "terkel@terkel.com",
      "url": "https://terkel.com"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "babel-jest": "^16.0.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-es2015-rollup": "^1.2.0",
    "ghooks": "^1.3.2",
    "jest": "^16.0.0",
    "jest-cli": "^16.0.0",
    "jsdoc-to-markdown": "^1.3.7",
    "rollup": "^0.36.1",
    "rollup-plugin-babel": "^2.6.1",
    "standard": "^8.2.0",
    "uglify-js": "^2.7.3",
    "semantic-release": "^4.3.5"
  },
  "standard": {
    "ignore": ["/docs"],
    "globals": [
      "expect",
      "it",
      "test",
      "describe"
    ]
  },
  "config": {
    "ghooks": {
      "pre-push": "npm test"
    }
  }
}
